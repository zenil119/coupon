<%- include('co_datahead') %>
    <% if(flash.success && flash.success.length > 0 ) { %>
        <% } %>
            <div class="content">
                <form action="/search" method="GET" class="form-inline">
                    <div class="class-group">
                        <input type="text" name="search" placeholder="Code" class="form-control" value="">
                        <input type="submit" value="search" class="btn btn-primary">
                    </div>
                </form>
                <table class="table table-bordered table table-hover mt-3">
                    <thead>
                        <tr>
                            <th scope="col">Code</th>
                            <th scope="col">Title</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">End Date</th>
                            <th scope="col">Status</th>
                            <th scope="col-2">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var coupon of coupon){ %>
                            <tr>
                                <td>
                                    <%= coupon.code %>
                                </td>
                                <td>
                                    <%= coupon.title %>
                                </td>
                                <td>
                                    <%= moment(coupon.start_date).format('MMM-DD-YYYY') %>
                                </td>
                                <td>
                                    <%= moment(coupon.end_date).format('MMM-DD-YYYY') %>
                                </td>
                                <td>
                                    <%=coupon.active ? 'Active': 'Inactive'%>
                                </td>
                                <td><a href="/delete_record/?id=<%= coupon.id %>" class="badge badge-pill badge-danger" data-toggle="modal" data-target="#exampleModal">Delete</a>
                                    <a href="/update_record/?id=<%= coupon.id %>" class="badge badge-pill badge-success">Update</a></td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <p>
                    <nav aria-label="Page navigation example" class="py-3">
                        <ul class="pagination justify-content-center">
                            <li class="page-item"><a class="page-link" id="previous" href="http://localhost:2001/coupon_data?page=1&limit=3">Previous</a></li>
                            <li class="page-item"><a class="page-link" href="http://localhost:2001/coupon_data?page=1&limit=3">1</a></li>

                            <li class="page-item"><a class="page-link" href="http://localhost:2001/coupon_data?page=2&limit=3">2</a></li>
                            <li class="page-item"><a class="page-link" href="http://localhost:2001/coupon_data?page=3&limit=3">3</a></li>

                            <li class="page-item"><a class="page-link" href="http://localhost:2001/coupon_data?page=3&limit=3">Next</a></li>
                        </ul>
                    </nav>
                </p>
                <p>
                    <a href="/" class="btn btn-primary">Add Coupon</a>
                </p>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">

                                <h5 class="modal-title" id="exampleModalLabel">Delete Coupon</h5>

                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure, want to delete Coupon?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <a href="/delete_record/?id=<%= coupon.id %>" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('co_datascript') %>